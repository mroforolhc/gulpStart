// scroll-lock
body.modal-open
    overflow hidden

.overlay
    visibility hidden
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    background rgba(196,196,196,0.5)
    z-index 3000
    display flex
    align-items center
    justify-content center

.modal
    visibility hidden
    position relative
    margin auto
    width 100%
    max-width 672px
    background-color #FFFFFF
    box-shadow 0 0 41px rgba(#000, 0.5)
    transition opacity 0.5s
    opacity 0
    outline none

    &__close
        z-index 100
        mx-cross(#E5E5E5, 2px, 15px)
        right 20px
        top 20px
        cursor pointer
        +above(sm)
            mx-cross(#E5E5E5, 2px, 34px)
    &__container
        padding 20px 30px 50px
        +above(sm)
            padding 80px 50px 100px

// animation
.overlay_show.overlay
    visibility visible
    .modal
        opacity 1
        visibility visible
